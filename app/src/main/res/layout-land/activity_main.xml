<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#4A708B">

    <TextView android:text="                                                                                                                                  Menu principal" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:id="@+id/Menu"
        android:textAppearance="@string/abc_action_bar_home_description" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:startColor="#00008B"
        android:orientation="vertical"
        android:layout_below="@+id/Menu">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp1"
                android:drawableTop="@mipmap/circulo"
                android:paddingTop="40dp"
                android:textColor="#F7F4F4"
                android:text="Circulo"
                android:backgroundTint="#6A5ACD" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp2"
                android:drawableTop="@mipmap/cubo"
                android:paddingTop="40dp"
                android:textColor="#F7F4F4"
                android:text="Cubo"
                android:backgroundTint="#6A5ACD" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp3"
                android:drawableTop="@mipmap/quadrado"
                android:paddingTop="40dp"
                android:textColor="#F7F4F4"
                android:text="Quadrado"
                android:backgroundTint="#6A5ACD" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp4"
                android:drawableTop="@mipmap/retangulo"
                android:paddingTop="40dp"
                android:textColor="#F7F4F4"
                android:text="Retangulo"
                android:backgroundTint="#6A5ACD" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp5"
                android:drawableTop="@mipmap/trianguloisosceles"
                android:paddingTop="40dp"
                android:textColor="#F7F4F4"
                android:text="Triangulo Isosceles"
                android:backgroundTint="#6A5ACD" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp6"
                android:drawableTop="@mipmap/trianguloretangulo"
                android:paddingTop="40dp"
                android:textColor="#F7F4F4"
                android:text="Triangulo Retangulo"
                android:backgroundTint="#6A5ACD" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
