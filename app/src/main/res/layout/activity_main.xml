<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    tools:context=".MainActivity"
    android:background="#4A708B">

    <TextView android:text="                                                                      Menu principal" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:id="@+id/Menu"
        android:textAppearance="@string/abc_action_bar_home_description" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:startColor="#00008B"
        android:orientation="vertical"
        android:layout_below="@+id/Menu">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp1"
                android:drawableTop="@mipmap/circulo"
                android:paddingTop="30dp"
                android:textColor="#F7F4F4"
                android:text="Circulo"
                android:backgroundTint="#6A5ACD" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp2"
                android:drawableTop="@mipmap/cubo"
                android:paddingTop="27dp"
                android:textColor="#F7F4F4"
                android:text="Cubo"
                android:backgroundTint="#6A5ACD" />

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp7"
                android:drawableTop="@mipmap/bascara"
                android:paddingTop="27dp"
                android:textColor="#F7F4F4"
                android:text="Baskara"
                android:backgroundTint="#6A5ACD" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp3"
                android:drawableTop="@mipmap/quadrado"
                android:paddingTop="27dp"
                android:textColor="#F7F4F4"
                android:text="Quadrado"
                android:backgroundTint="#6A5ACD" />

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp4"
                android:drawableTop="@mipmap/retangulo"
                android:paddingTop="27dp"
                android:textColor="#F7F4F4"
                android:text="Retangulo"
                android:backgroundTint="#6A5ACD" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp8"
                android:drawableTop="@mipmap/pitagoras"
                android:paddingTop="27dp"
                android:textColor="#F7F4F4"
                android:text="Pitagoras"
                android:backgroundTint="#6A5ACD" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp5"
                android:drawableTop="@mipmap/trianguloisosceles"
                android:paddingTop="27dp"
                android:textColor="#F7F4F4"
                android:text="Triangulo Isosceles"
                android:backgroundTint="#6A5ACD" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp6"
                android:drawableTop="@mipmap/trianguloretangulo"
                android:paddingTop="27dp"
                android:textColor="#F7F4F4"
                android:text="Triangulo Retangulo"
                android:backgroundTint="#6A5ACD" />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp9"
                android:drawableTop="@mipmap/losango"
                android:paddingTop="27dp"
                android:textColor="#F7F4F4"
                android:text="Losango"
                android:backgroundTint="#6A5ACD" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/button10"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp10"
                android:drawableTop="@mipmap/trapezio"
                android:paddingTop="27dp"
                android:textColor="#F7F4F4"
                android:text="Trapezio"
                android:backgroundTint="#6A5ACD" />

            <Button
                android:id="@+id/button11"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp11"
                android:drawableTop="@mipmap/hexagono"
                android:paddingTop="27dp"
                android:textColor="#F7F4F4"
                android:text="Hexagono"
                android:backgroundTint="#6A5ACD" />

            <Button
                android:id="@+id/button12"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="runApp12"
                android:drawableTop="@mipmap/paralelograma"
                android:paddingTop="27dp"
                android:textColor="#F7F4F4"
                android:text="Paralelo grama"
                android:backgroundTint="#6A5ACD" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
