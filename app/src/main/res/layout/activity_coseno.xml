<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#4A708B"
    tools:context="br.com.fontenovaimoveis.fontenapp.Coseno">

    <TextView android:text="Digite o Cateto Adjacente:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:id="@+id/textViewCatetoAdjacenteCoseno"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextCatetoAdjacenteCoseno"
        android:layout_below="@+id/textViewCatetoAdjacenteCoseno"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:text="Digite a hipotenusa:"
        android:id="@+id/textViewHipotenusaCoseno"
        android:layout_below="@+id/editTextCatetoAdjacenteCoseno"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextHipotenusaCoseno"
        android:layout_below="@+id/textViewHipotenusaCoseno"
        android:layout_alignRight="@+id/editTextCatetoAdjacenteCoseno"
        android:layout_alignEnd="@+id/editTextCatetoAdjacenteCoseno" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/buttonCalc"
        android:layout_below="@+id/editTextHipotenusaCoseno"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp" />

</RelativeLayout>
