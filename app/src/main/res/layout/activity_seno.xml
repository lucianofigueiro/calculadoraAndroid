<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#4A708B"
    tools:context="br.com.fontenovaimoveis.fontenapp.Seno">

    <TextView android:text="Digite o cateto Oposto:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:id="@+id/textviewCatetoOpostoSENO"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextCatetoOpostoSeno"
        android:layout_below="@+id/textviewCatetoOpostoSENO"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:text="Digite a hipotenusa:"
        android:id="@+id/textViewHipotenusaSeno"
        android:layout_below="@+id/editTextCatetoOpostoSeno"
        android:layout_alignRight="@+id/textviewCatetoOpostoSENO"
        android:layout_alignEnd="@+id/textviewCatetoOpostoSENO" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextHipotenusaSeno"
        android:layout_below="@+id/textViewHipotenusaSeno"
        android:layout_alignLeft="@+id/editTextCatetoOpostoSeno"
        android:layout_alignStart="@+id/editTextCatetoOpostoSeno" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/buttonCalc"
        android:layout_below="@+id/editTextHipotenusaSeno"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="126dp" />

</RelativeLayout>
