<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#4A708B"
    tools:context="br.com.fontenovaimoveis.fontenapp.Tangente">

    <TextView android:text="Digite o Cateto Oposto:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:id="@+id/textViewCatetoOpostoTangente"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextCatetoOpostoTangente"
        android:layout_below="@+id/textViewCatetoOpostoTangente"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:text="Digite o Cateto Adjacente:"
        android:id="@+id/textViewCatetoAdjacenteTangente"
        android:layout_below="@+id/editTextCatetoOpostoTangente"
        android:layout_alignRight="@+id/textViewCatetoOpostoTangente"
        android:layout_alignEnd="@+id/textViewCatetoOpostoTangente" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextCatetoAdjacenteTangente"
        android:layout_below="@+id/textViewCatetoAdjacenteTangente"
        android:layout_alignLeft="@+id/editTextCatetoOpostoTangente"
        android:layout_alignStart="@+id/editTextCatetoOpostoTangente" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/buttonCalc"
        android:layout_below="@+id/editTextCatetoAdjacenteTangente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp" />

</RelativeLayout>
