<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#4A708B"
    tools:context="br.com.fontenovaimoveis.fontenapp.TrianguloR">

    <TextView
        android:textColor="#F7F4F4"
        android:text="Digite o primeiro cateto se não souber digite 0:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewPrimeiroCateto"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:background="#A9A9A9"
        android:layout_marginTop="12dp"
        android:id="@+id/editTextCateto1TriangloR"
        android:layout_below="@+id/textviewPrimeiroCateto"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:layout_marginTop="32dp"
        android:text="Digite o segundo cateto se não souber digite 0:"
        android:id="@+id/textView11"
        android:layout_below="@+id/editTextCateto1TriangloR"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:background="#A9A9A9"
        android:layout_marginTop="12dp"
        android:id="@+id/editTextCateto2TriangloR"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:layout_marginTop="32dp"
        android:text="Digite o terceiro cateto se não souber digite 0:"
        android:id="@+id/textView12"
        android:layout_below="@+id/editTextCateto2TriangloR"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:background="#A9A9A9"
        android:layout_marginTop="12dp"
        android:id="@+id/editTextCateto3TriangloR"
        android:layout_below="@+id/textView12"
        android:layout_alignRight="@+id/editTextCateto2TriangloR"
        android:layout_alignEnd="@+id/editTextCateto2TriangloR" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/buttonCalc"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/editTextCateto3TriangloR"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
