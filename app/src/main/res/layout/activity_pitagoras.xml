<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#4A708B">
    tools:context="br.com.fontenovaimoveis.fontenapp.Pitagoras">

    <TextView
        android:textColor="#F7F4F4"
        android:text="Digite o primeiro valor:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/TextViewPrimeiro" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:background="#A9A9A9"
        android:id="@+id/editTextPrimeiroValor"
        android:layout_below="@+id/TextViewPrimeiro"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="#F7F4F4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite o segundo valor:"
        android:layout_marginTop="32dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/editTextPrimeiroValor"
        android:layout_alignLeft="@+id/TextViewPrimeiro"
        android:layout_alignStart="@+id/TextViewPrimeiro" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:background="#A9A9A9"
        android:id="@+id/editTextSegundoValor"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/editTextPrimeiroValor"
        android:layout_alignStart="@+id/editTextPrimeiroValor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/buttonCalc"
        android:layout_below="@+id/editTextSegundoValor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

</RelativeLayout>
