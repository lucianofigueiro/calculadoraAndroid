<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#4A708B"
    tools:context="br.com.fontenovaimoveis.fontenapp.Potencia">

    <TextView android:text="Digite a base:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:id="@+id/textviewBasePotencia"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:background="#A9A9A9"
        android:id="@+id/editTextBasePotencia"
        android:layout_below="@+id/textviewBasePotencia"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:layout_marginTop="32dp"
        android:text="Digite o Expoente:"
        android:id="@+id/textViewExpoente"
        android:layout_below="@+id/editTextBasePotencia"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:background="#A9A9A9"
        android:id="@+id/editTextExpoentePotencia"
        android:layout_below="@+id/textViewExpoente"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/buttonCalc"
        android:layout_below="@+id/editTextExpoentePotencia"
        android:layout_alignLeft="@+id/textviewBasePotencia"
        android:layout_alignStart="@+id/textviewBasePotencia"
        android:layout_marginTop="53dp" />

</RelativeLayout>
