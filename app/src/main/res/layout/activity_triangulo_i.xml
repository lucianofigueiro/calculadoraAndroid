<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#4A708B"
    tools:context="br.com.fontenovaimoveis.fontenapp.TrianguloI">

    <TextView android:text="Digite a base do triangulo Isoceles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:id="@+id/textviewtrianguloiso"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:background="#A9A9A9"
        android:layout_marginTop="12dp"
        android:id="@+id/editTextBaseTrianguloIsoceles"
        android:layout_below="@+id/textviewtrianguloiso"
        android:layout_alignRight="@+id/textviewtrianguloiso"
        android:layout_alignEnd="@+id/textviewtrianguloiso" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:layout_marginTop="32dp"
        android:text="Digite a altura do triangulo isoceles"
        android:id="@+id/textViewAlturaTrianguloIsoceles"
        android:layout_below="@+id/editTextBaseTrianguloIsoceles"
        android:layout_alignLeft="@+id/editTextBaseTrianguloIsoceles"
        android:layout_alignStart="@+id/editTextBaseTrianguloIsoceles" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:background="#A9A9A9"
        android:layout_marginTop="12dp"
        android:id="@+id/editTextAlturaTrianguloisoceles"
        android:layout_below="@+id/textViewAlturaTrianguloIsoceles"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/buttonCalc"
        android:layout_below="@+id/editTextAlturaTrianguloisoceles"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

</RelativeLayout>
