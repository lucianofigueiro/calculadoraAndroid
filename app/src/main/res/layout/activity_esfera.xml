<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#4A708B"
    tools:context="br.com.fontenovaimoveis.fontenapp.Esfera">

    <TextView android:text="Digite o raio para Calcular Area 0 se não for necessario:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textviewAreaEsfera" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:background="#A9A9A9"
        android:layout_marginTop="12dp"
        android:id="@+id/editTextAreaEsfera"
        android:layout_below="@+id/textviewAreaEsfera"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:layout_marginTop="32dp"
        android:text="Digite o raio para Calcular Volume e 0 se não for preciso:"
        android:id="@+id/textView13"
        android:layout_below="@+id/editTextAreaEsfera"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:background="#A9A9A9"
        android:layout_marginTop="12dp"
        android:id="@+id/editTextAreaVolumeEsfera"
        android:layout_below="@+id/textView13"
        android:layout_alignRight="@+id/editTextAreaEsfera"
        android:layout_alignEnd="@+id/editTextAreaEsfera" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/buttonCalc"
        android:layout_below="@+id/editTextAreaVolumeEsfera"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

</RelativeLayout>
