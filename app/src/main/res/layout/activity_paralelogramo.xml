<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#4A708B"
    tools:context="br.com.fontenovaimoveis.fontenapp.Paralelogramo">

    <TextView android:text="Digite a Base do Paralelogramo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textviewBaseParalelo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:background="#A9A9A9"
        android:id="@+id/editTextBaseParalelogramo"
        android:layout_below="@+id/textviewBaseParalelo"
        android:layout_alignLeft="@+id/textviewBaseParalelo"
        android:layout_alignStart="@+id/textviewBaseParalelo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F7F4F4"
        android:layout_marginTop="32dp"
        android:text="Digite a Altura do Paralelogramo"
        android:id="@+id/textViewAlturaParalelo"
        android:layout_below="@+id/editTextBaseParalelogramo"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:background="#A9A9A9"
        android:id="@+id/editTextAlturaParalelogramo"
        android:layout_below="@+id/textViewAlturaParalelo"
        android:layout_alignLeft="@+id/textViewAlturaParalelo"
        android:layout_alignStart="@+id/textViewAlturaParalelo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/buttonCalc"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/editTextAlturaParalelogramo"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
